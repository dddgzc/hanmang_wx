.flex{
  display: flex;
  align-items: center;
}

.text-right{text-align: right;}

.text-center{text-align: center;}

.flex-wrap{
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* page{background-color: #f5f5f5;} */

.clearfix:after {
	display: block;
	content: "";
	clear: both;
	height: 0;
	overflow: hidden;
}
.clearfix{
	zoom: 1;
}

.fl{float: left;}

.fr{float: right;}

.wrap{
  padding: 0 30rpx;
}

.title-box{
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
}

.more{
  font-size: 22rpx;
  color: #999999;
}

.more image{
  width: 8rpx;
  height: 16rpx;
  margin-left: 12rpx;
}