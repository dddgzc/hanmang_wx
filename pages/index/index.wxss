::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.nav{
  padding: 0 30rpx;
  height: 76rpx;
  box-shadow: 0 10rpx 10rpx #eaeaea;
}

.nav text{
  font-size: 24rpx;
  color: #313131;
  padding: 0 16rpx;
  line-height: 76rpx;
  border-bottom: 5rpx solid transparent;
  text-align: center;
  box-sizing: border-box;
}

.nav text.active{border-bottom: 5rpx solid #fccc48;font-weight: bold;
color: #fccc48;
}

.wrapper{
  padding: 40rpx;
}

.items{
  border-radius: 15rpx;
  border: 1px solid #cacaca;
  margin-bottom: 40rpx;
  background: #fff;
}

.items image{
  width: 100%;
  height: 188rpx;
}

.info{
  padding: 20rpx 30rpx;
}

.titles{
  font-size: 24rpx;
  color: #313131;
  font-weight: bold;
  line-height: 24rpx;
  margin-bottom: 18rpx;
}

.book-num{color: #a1a1a1;font-size: 20rpx;}

.shengyu-me,.price{
  font-size: 22rpx;
  color: #c65a5a;
  font-weight: bold;
}

.items > image{
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.shengyu{
  font-size: 20rpx;
  color: #ea5b5b;
  margin-left: 10rpx;
}

.nav-box text{
  font-size: 20rpx;
  color: #313131;
}

.nav-box{
  padding: 0 18rpx;
  margin-bottom: 30rpx;
}

.nav-box text.active{
  font-weight: bold;
}
.index_tab .bottom_scroll{
  width:100%;
  white-space:nowrap;
  overflow:hidden;
  line-height:56rpx;
  height: 60rpx;
}
.index_tab .bottom_scroll .nav1{
  width:18%;
  display:inline-block;
  white-space:normal;
  text-align:center;
  font-size: 26rpx;
  border-radius: 28rpx;
  background-color: #fff;
  margin-right: 30rpx;
}
.index_tab .bottom_scroll .nav1.cur{
    background-color: #ffcc2d;
    color: #fff;
}

#tab-list{
  padding-right: 0;
}

#tab-list .items{margin-right: 40rpx;}

.wrapper1{
  padding-left: 40rpx;
}

.wrapper2{
  padding-right: 40rpx;
  padding-left: 40rpx;
}

.index_tab{
  margin: 30rpx 0;
}

page{background-color: #f5f6fa;}

.shengyu1,.price1{
  font-size: 28rpx;
  color: #ff4747;
  font-weight: bold;
}

.gove{
  font-size: 20rpx;
  color: #ffcc2d;
}

.gove image,.buyer-num image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.buyer-num{
  font-size: 20rpx;
  color: #d4d4d4;
}

.top{margin-bottom: 30rpx;}