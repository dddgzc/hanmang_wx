.item-view{
  display: flex;
  position: relative;
  width: 750rpx;
  height: 50px;
  justify-content: space-between;
  align-items: center;
  padding: 0px 8px;
  background-color: white;
  margin: 5px 0px;
  font-size: 16px;
  border-top: 1rpx #cdcdcd solid;
  border-bottom: 1rpx #cdcdcd solid;
}
.left-view{
  display: flex;
  align-items: center;
  width: 50%;
}
.left-view image{
  width: 30px;
  height: 30px;
}
.right-view{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 30%;
}
.right-view image{
  width: 30px;
  height: 30px;
}
.label{
  margin-left: 8px;
}
.contact{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0px;
  left: 0px;
  opacity: 0;
}
.red-point{
  background-color: red;
  padding: 5px;
  border-radius: 50%;
  box-shadow: 1rpx 1rpx 2rpx 0rpx #f0f0f0;
}
.red-sign{
  line-height: 20px;
  text-align: center;
  background-color: red;
  padding: 0px 8px;
  color: white;
  font-size: 14px;
  border-radius: 15px;
  box-shadow: 1rpx 1rpx 2rpx 0rpx #f0f0f0;
}
.sign-text{
  font-size: 14px;
  color: red;
}
.right-img{
  width: 24px;
  height: 24px;
}