  display: flex;
  flex-direction: row;
  height: 40px;
  width: 100%;
  padding: 0px 10rpx;
  background: white;
  margin: 4px 0px;
  box-shadow: 0px 1px 0px 0px #f0f0f0;
}
.label{
  width:200rpx;
  line-height: 40px;
  text-align: left;
  padding: 0px 8px;
  color: #5a5a5a;
}
.input{
  height: 40px;
  line-height: 40px;
  color: #8a8a8a;
  padding: 0px 8px;
}