/* components/aydk_image_view/aydk_image_view.wxss */
.content{
  padding: 8rpx;
  overflow: hidden;
}
.close{
  position: absolute;
  right: 5px;
  top:5px;
}
.add-img{
  display: flex;
  position: relative;
  width: 100%;
  height: 100%;
  border: 1px #8a8a8a solid;
}
.add-img:active{
  border: 1px black solid;
}
.line1{
  width: 30px;
  height: 1px;
  border-top:1px #8a8a8a solid;
  position: absolute;
  top: 50%;
  left:50%;
  margin-left: -15px;
}
.line2{
  height: 30px;
  width: 1px;
  border-left: 1px #8a8a8a solid;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -15px;
}
.img-view{
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}
.border-rect{
  border-radius: 0px;
}
.border-round{
  border-radius: 4px;
}
.border-circle{
  border-radius: 50%;
}
.img-view image{
  width: 100%;
  height: 100%;
}
.border{
  border: white 2px solid;
}